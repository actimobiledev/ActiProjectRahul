<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.actiknow.actiproject">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.actiknow.actiproject.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.actiknow.actiproject.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.actiknow.actiproject.activity.LoginActivity" />

        <activity
            android:name="com.actiknow.actiproject.activity.AcceptedJobActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.actiknow.actiproject.activity.RejectedJobActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.actiknow.actiproject.activity.ChangePasswordActivity"
            android:screenOrientation="portrait" />


    </application>

</manifest>